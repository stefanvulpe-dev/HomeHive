@using HomeHive.UI.ViewModels.Estates

@code
{
    [Parameter]
    public EventCallback OnSearch { get; set; }
    public SearchModel SearchModel { get; set; } = new SearchModel();

    private async Task Search()
    {
        await OnSearch.InvokeAsync(SearchModel);
    }
}

<div class="container mt-4">
    <form  @onsubmit="() => OnSearch.InvokeAsync(SearchModel)" class="row justify-content-center mx-auto text-center">
        <div class="input-group">
            <input @bind="SearchModel.Name" class="form-control form-control-lg me-2 rounded-3 py-2" type="search" placeholder="Search for the perfect nest" aria-label="Search">
            <div class="input-group-append">
                <button class="btn btn-outline-success btn-lg" type="submit">Search <i class="fas fa-search" aria-hidden="true"></i></button>
            </div>
        </div>
    </form> 
</div>